# üåê Server Configuration
PORT=7000 # Port on which the server will run

# üóÑÔ∏è Database Configuration
DB_NAME=your_db_name           # Name of your PostgreSQL database
DB_USER=your_db_user           # Username for PostgreSQL
DB_PASSWORD=your_db_password   # Password for PostgreSQL
DB_HOST=localhost              # Database host (usually localhost)
DB_PORT=5432                   # Default PostgreSQL port

# üîê Security Keys
SECRET_KEY=your_secret_key         # Secret key used for JWT or session signing
DB_ENCRYPT_KEY=your_db_encrypt_key # Key used to encrypt/decrypt sensitive data in the DB

# üí≥ PayPal API Configuration
CLIENT_ID=your_paypal_client_id       # PayPal API Client ID
SECRET=your_paypal_secret             # PayPal API Secret
SUBSCRIBE_PLAN_ID=your_paypal_plan_id # PayPal subscription plan ID

# üìß Email Service (Nodemailer SMTP)
NODEMAILER_HOST=smtp.provider.com     # SMTP host (e.g., smtp.gmail.com, smtp.ukr.net)
NODEMAILER_PORT=465                   # SMTP port (usually 465 for SSL)
NODEMAILER_USER=your_email@example.com # Email address used to send messages
NODEMAILER_PASS=your_email_password   # Password or app-specific password for that email

# üìå Notes:
# - Never commit your real `.env` file to Git!
# - Keep secrets safe using .gitignore and environment protection settings.
